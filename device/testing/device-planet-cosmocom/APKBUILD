# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-planet-cosmocom
pkgdesc="Planet Computers Cosmo Communicator"
pkgver=0.1
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	linux-planet-cosmocom
	mesa-dri-gallium
	mkbootimg
	postmarketos-base
	msm-fb-refresher
"
makedepends="devicepkg-dev"
source="deviceinfo
	10-cosmocom-loopback-device.sh
	20-fbdev.conf
"

build() {

	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname

	install -Dm644 "$srcdir"/10-cosmocom-loopback-device.sh \
		"$pkgdir"/etc/postmarketos-mkinitfs/hooks/10-cosmocom-loopback-device.sh

	install -Dm644 "$srcdir"/20-fbdev.conf \
		"$pkgdir"/etc/X11/xorg.conf.d/20-fbdev.conf
}
